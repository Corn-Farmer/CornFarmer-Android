<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/recommend_previous_btn1_iv"
        android:layout_width="7dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_back_btn1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginStart="29dp"/>

    <ImageView
        android:id="@+id/recommend_previous_btn2_iv"
        android:src="@drawable/ic_back_btn2"
        android:layout_width="7dp"
        android:layout_height="14dp"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/recommend_previous_btn1_iv"
        android:layout_marginTop="38dp" />

    <ImageView
        android:id="@+id/recommend_search_btn_iv"
        android:src="@drawable/ic_search"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/recommend_heart_btn_iv"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="15dp" />
    
    <ImageView
        android:id="@+id/recommend_heart_btn_iv"
        android:src="@drawable/ic_heart"
        android:layout_width="18dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/recommend_news_btn_iv"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="15dp" />
    
    <ImageView
        android:id="@+id/recommend_news_btn_iv"
        android:src="@drawable/ic_bell_off"
        android:layout_width="18dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="28dp" />


    <TextView
        android:id="@+id/recommend_title_keyword_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# 따뜻한 연말"
        android:textColor="#1E005D"
        android:textSize="21sp"
        app:layout_constraintTop_toBottomOf="@id/recommend_news_btn_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:layout_marginStart="34dp"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/recommend_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="컨파머가 추천하는 따뜻한 연말을 위한 컨텐츠"
        android:textSize="12sp"
        android:textColor="#515151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommend_title_keyword_tv"
        android:layout_marginStart="34dp"
        android:layout_marginTop="17dp" />

    <ImageView
        android:id="@+id/recommend_movie_image1_iv"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_example_movie1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/recommend_subtitle_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/recommend_movie_title1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="올라프가 전해요"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/recommend_movie_image1_iv"
        app:layout_constraintStart_toStartOf="@id/recommend_movie_image1_iv"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp" />

    <ImageView
        android:id="@+id/recommend_movie_like_btn1_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_heart_white"
        app:layout_constraintEnd_toEndOf="@id/recommend_movie_image1_iv"
        app:layout_constraintTop_toTopOf="@id/recommend_movie_title1_tv"
        app:layout_constraintBottom_toBottomOf="@id/recommend_movie_title1_tv"
        android:layout_marginEnd="45dp" />

    <ImageView
    android:id="@+id/recommend_movie_image2_iv"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:src="@drawable/img_example_movie2"
    android:scaleType="centerCrop"
    app:layout_constraintTop_toBottomOf="@id/recommend_movie_image1_iv"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="4dp"
    android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/recommend_movie_title2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="왓이프"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/recommend_movie_image2_iv"
        app:layout_constraintStart_toStartOf="@id/recommend_movie_image2_iv"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp" />

    <ImageView
        android:id="@+id/recommend_movie_like_btn2_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_heart_white"
        app:layout_constraintEnd_toEndOf="@id/recommend_movie_image2_iv"
        app:layout_constraintTop_toTopOf="@id/recommend_movie_title2_tv"
        app:layout_constraintBottom_toBottomOf="@id/recommend_movie_title2_tv"
        android:layout_marginEnd="45dp" />

    <ImageView
        android:id="@+id/recommend_movie_image3_iv"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_example_movie3"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/recommend_movie_image2_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/recommend_movie_title3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나홀로 집에"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/recommend_movie_image3_iv"
        app:layout_constraintStart_toStartOf="@id/recommend_movie_image3_iv"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp" />

    <ImageView
        android:id="@+id/recommend_movie_like_btn3_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_heart_white"
        app:layout_constraintEnd_toEndOf="@id/recommend_movie_image3_iv"
        app:layout_constraintTop_toTopOf="@id/recommend_movie_title3_tv"
        app:layout_constraintBottom_toBottomOf="@id/recommend_movie_title3_tv"
        android:layout_marginEnd="45dp" />

</androidx.constraintlayout.widget.ConstraintLayout>