<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinOttActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/ott_cl"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ott_back_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/ott_skip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="건너뛰기"
            android:textColor="#000080"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:textColor="#000080"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/ott_explain_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ott_cl"
        android:text="사용중인 OTT를 알려주세요!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <GridLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ott_explain_tv"
        android:layout_width="match_parent"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button android:text="사용 안함"/>
        <Button android:text="넷플릭스"/>
        <Button android:text="왓챠"/>
        <Button android:text="디즈니플러스"/>
        <Button android:text="웨이브"/>
        <Button android:text="티빙"/>
        <Button android:text="쿠팡"/>
        <Button android:text="프라임비디오"/>
        <Button android:text="애플티비"/>


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>