<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_img"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_marginStart="@dimen/size_spacing_20"
                android:layout_marginTop="@dimen/size_spacing_20"
                android:layout_marginEnd="@dimen/size_spacing_20"
                app:cardCornerRadius="@dimen/size_spacing_20"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_movie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/olaf" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="30dp"
                android:text="이 작품은 어떠셨나요?"
                android:textColor="#1E005D"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_img" />

            <ImageView
                android:id="@+id/iv_first_corn"
                android:layout_width="48dp"
                android:layout_height="90dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/comment_corn"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <ImageView
                android:id="@+id/iv_first_corn_color"
                android:layout_width="48dp"
                android:layout_height="90dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/corn_rate_img"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <ImageView
                android:id="@+id/iv_second_corn"
                android:layout_width="48dp"
                android:layout_height="90dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/comment_corn"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <ImageView
                android:id="@+id/iv_second_corn_color"
                android:layout_width="48dp"
                android:layout_height="90dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/corn_rate_img"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <ImageView
                android:id="@+id/iv_third_corn"
                android:layout_width="48dp"
                android:layout_height="90dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/comment_corn"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <ImageView
                android:id="@+id/iv_third_corn_color"
                android:layout_width="48dp"
                android:layout_height="90dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/corn_rate_img"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <ImageView
                android:id="@+id/iv_fourth_corn"
                android:layout_width="48dp"
                android:layout_height="90dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/comment_corn"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <ImageView
                android:id="@+id/iv_fourth_corn_color"
                android:layout_width="48dp"
                android:layout_height="90dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/corn_rate_img"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <ImageView
                android:id="@+id/iv_fifth_corn"
                android:layout_width="48dp"
                android:layout_height="90dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/comment_corn"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <ImageView
                android:id="@+id/iv_fifth_corn_color"
                android:layout_width="48dp"
                android:layout_height="90dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/corn_rate_img"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <TextView
                android:id="@+id/iv_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="100dp"
                android:text="후기를 작성해주세요."
                android:textColor="#1E005D"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/comment_edittext_background"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:scrollbars="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_describe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_content">

                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/comment_cancel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ns_modify" />

                <ImageView
                    android:id="@+id/iv_complete"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/comment_complete"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_cancel" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0.0"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
