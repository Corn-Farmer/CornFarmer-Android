<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/iv_keyword"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home"
            app:layout_constraintBottom_toBottomOf="@id/iv_keyword"
            app:layout_constraintEnd_toStartOf="@id/iv_keyword"
            app:layout_constraintTop_toTopOf="@id/iv_keyword" />

        <ImageView
            android:id="@+id/iv_keyword"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/keywordbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="145dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="@id/iv_keyword"
            app:layout_constraintStart_toEndOf="@id/iv_keyword"
            app:layout_constraintTop_toTopOf="@id/iv_keyword" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
