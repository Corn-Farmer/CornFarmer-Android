<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/profile_genre_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장르"
        android:background="@drawable/genre_background_color"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ott_remove"
        app:layout_constraintStart_toEndOf="@id/profile_genre_tv"
        app:layout_constraintTop_toTopOf="@id/profile_genre_tv"
        android:layout_marginStart="-11.5dp"
        android:layout_marginTop="-6dp"
        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>