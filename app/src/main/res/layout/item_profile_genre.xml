<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/profile_genre_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/genre_background_color"
            android:gravity="center"
            android:text="장르"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="-11.5dp"
            android:layout_marginTop="-6dp"
            android:src="@drawable/ott_remove"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/profile_genre_tv"
            app:layout_constraintTop_toTopOf="@id/profile_genre_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>