<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/wishlist_previous_btn1_iv"
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="38dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back_btn1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/wishlist_previous_btn2_iv"
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_marginTop="38dp"
                android:scaleType="center"
                android:src="@drawable/ic_back_btn2"
                app:layout_constraintStart_toEndOf="@id/wishlist_previous_btn1_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/wishlist_search_btn_iv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_search"
                app:layout_constraintEnd_toStartOf="@id/wishlist_heart_btn_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/wishlist_heart_btn_iv"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_heart"
                app:layout_constraintEnd_toStartOf="@id/wishlist_news_btn_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/wishlist_news_btn_iv"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="28dp"
                android:src="@drawable/ic_bell_off"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/wishlist_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 찜한 작품 모아보기"
                android:textSize="21sp"
                android:textColor="#1E005D"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wishlist_news_btn_iv"
                android:layout_marginStart="32dp"
                android:layout_marginTop="60dp" />

            <ImageView
                android:id="@+id/wishlist_setting_btn_iv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_setting"
                app:layout_constraintTop_toTopOf="@id/wishlist_title_tv"
                app:layout_constraintBottom_toBottomOf="@id/wishlist_title_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wishlist_RV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wishlist_title_tv"
                app:layout_constraintVertical_bias="1.0"
                android:clipToPadding="false"
                tools:listitem="@layout/item_wishmovie" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>