<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/comment_previous_btn1_iv"
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="38dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back_btn1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/comment_previous_btn2_iv"
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_marginTop="38dp"
                android:scaleType="center"
                android:src="@drawable/ic_back_btn2"
                app:layout_constraintStart_toEndOf="@id/comment_previous_btn1_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/comment_search_btn_iv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_search"
                app:layout_constraintEnd_toStartOf="@id/comment_heart_btn_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/comment_heart_btn_iv"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_heart"
                app:layout_constraintEnd_toStartOf="@id/comment_news_btn_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/comment_news_btn_iv"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="28dp"
                android:src="@drawable/ic_bell_off"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/comment_ask_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이 작품은 어떠셨나요?"
                android:textColor="#1E005D"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/comment_search_btn_iv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="60dp"
                android:layout_marginStart="34dp" />

            <TextView
                android:id="@+id/comment_ask_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="후기를 작성해주세요."
                android:textColor="#1E005D"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/comment_ask_score_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="100dp"
                android:layout_marginStart="34dp" />

            <EditText
                android:id="@+id/comment_edittext"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/comment_edittext_border"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                android:scrollbars="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/comment_ask_comment_tv"
                android:layout_marginTop="24dp"/>
            
            <ImageView
                android:id="@+id/comment_complete_btn_iv"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:src="@drawable/img_yellow_ellipse"
                app:layout_constraintTop_toBottomOf="@id/comment_edittext"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="28dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/comment_complete_btn_iv"
                app:layout_constraintBottom_toBottomOf="@id/comment_complete_btn_iv"
                app:layout_constraintStart_toStartOf="@id/comment_complete_btn_iv"
                app:layout_constraintEnd_toEndOf="@id/comment_complete_btn_iv" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>