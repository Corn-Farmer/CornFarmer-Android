<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_mycomment_movie_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영화 제목"
        android:textColor="#12005D"
        android:textStyle="bold"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_mycomment_movie_img_cardview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/item_mycomment_movie_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:id="@+id/item_mycomment_movie_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/olaf" /><!-- 앨범 이미지 -->
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/item_mycomment_modify_btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:textColor="#C4C4C4"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintBottom_toBottomOf="@id/item_mycomment_movie_img_cardview"
        android:layout_marginEnd="30dp"
        />

    <ImageView
        android:id="@+id/item_mycomment_rate1_iv"
        android:layout_width="27dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintStart_toEndOf="@id/item_mycomment_movie_img_cardview"
        android:layout_marginStart="20dp"
        android:src="@drawable/corn_rate_img"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/item_comment_rate1_iv"
        android:layout_width="27dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintStart_toEndOf="@id/item_mycomment_movie_img_cardview"
        android:layout_marginStart="20dp"
        android:src="@drawable/comment_corn"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/item_mycomment_rate2_iv"
        android:layout_width="27dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintStart_toEndOf="@id/item_mycomment_movie_img_cardview"
        android:layout_marginStart="50dp"
        android:src="@drawable/corn_rate_img" />

    <ImageView
        android:id="@+id/item_comment_rate2_iv"
        android:layout_width="27dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintStart_toEndOf="@id/item_mycomment_movie_img_cardview"
        android:layout_marginStart="50dp"
        android:visibility="gone"
        android:src="@drawable/comment_corn" />


    <ImageView
        android:id="@+id/item_mycomment_rate3_iv"
        android:layout_width="27dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintStart_toEndOf="@id/item_mycomment_movie_img_cardview"
        android:layout_marginStart="80dp"
        android:src="@drawable/corn_rate_img" />

    <ImageView
        android:id="@+id/item_comment_rate3_iv"
        android:layout_width="27dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintStart_toEndOf="@id/item_mycomment_movie_img_cardview"
        android:layout_marginStart="80dp"
        android:visibility="gone"
        android:src="@drawable/comment_corn" />

    <ImageView
        android:id="@+id/item_mycomment_rate4_iv"
        android:layout_width="27dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintStart_toEndOf="@id/item_mycomment_movie_img_cardview"
        android:layout_marginStart="110dp"
        android:src="@drawable/corn_rate_img" />

    <ImageView
        android:id="@+id/item_comment_rate4_iv"
        android:layout_width="27dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintStart_toEndOf="@id/item_mycomment_movie_img_cardview"
        android:layout_marginStart="110dp"
        android:visibility="gone"
        android:src="@drawable/comment_corn" />

    <ImageView
        android:id="@+id/item_mycomment_rate5_iv"
        android:layout_width="27dp"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintStart_toEndOf="@id/item_mycomment_movie_img_cardview"
        android:layout_marginStart="140dp"
        android:src="@drawable/corn_rate_img" />

    <ImageView
        android:id="@+id/item_comment_rate5_iv"
        android:layout_width="27dp"
        android:visibility="gone"
        android:layout_height="39dp"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintStart_toEndOf="@id/item_mycomment_movie_img_cardview"
        android:layout_marginStart="140dp"
        android:src="@drawable/comment_corn" />

    <TextView
        android:id="@+id/item_mycomment_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:text="리뷰남기는데"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintTop_toTopOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintBottom_toBottomOf="@id/item_mycomment_movie_img_cardview"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/purple_horizontal_line"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/item_mycomment_movie_img_cardview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>