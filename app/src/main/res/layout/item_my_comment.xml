<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/indigo_500"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="영화 제목" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/size_spacing_16"
            app:cardCornerRadius="@dimen/size_spacing_20"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/olaf" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_spacing_15"
            android:text="@string/my_comment_modify"
            android:textColor="@color/grey_200"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title" />

        <ImageView
            android:id="@+id/iv_rate_one_color"
            android:layout_width="27dp"
            android:layout_height="39dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/corn_rate_img"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image" />

        <ImageView
            android:id="@+id/iv_rate_one"
            android:layout_width="27dp"
            android:layout_height="39dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/comment_corn"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image" />

        <ImageView
            android:id="@+id/iv_rate_two_color"
            android:layout_width="27dp"
            android:layout_height="39dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/corn_rate_img"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image" />

        <ImageView
            android:id="@+id/iv_rate_two"
            android:layout_width="27dp"
            android:layout_height="39dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/comment_corn"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image" />


        <ImageView
            android:id="@+id/iv_rate_three_color"
            android:layout_width="27dp"
            android:layout_height="39dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/corn_rate_img"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image" />

        <ImageView
            android:id="@+id/iv_rate_three"
            android:layout_width="27dp"
            android:layout_height="39dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/comment_corn"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image" />

        <ImageView
            android:id="@+id/iv_rate_four_color"
            android:layout_width="27dp"
            android:layout_height="39dp"
            android:layout_marginStart="100dp"
            android:src="@drawable/corn_rate_img"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image" />

        <ImageView
            android:id="@+id/iv_rate_four"
            android:layout_width="27dp"
            android:layout_height="39dp"
            android:layout_marginStart="100dp"
            android:src="@drawable/comment_corn"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image" />

        <ImageView
            android:id="@+id/iv_rate_five_color"
            android:layout_width="27dp"
            android:layout_height="39dp"
            android:layout_marginStart="130dp"
            android:src="@drawable/corn_rate_img"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image" />

        <ImageView
            android:id="@+id/iv_rate_five"
            android:layout_width="27dp"
            android:layout_height="39dp"
            android:layout_marginStart="130dp"
            android:src="@drawable/comment_corn"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image" />

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_spacing_10"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/cv_image"
            app:layout_constraintStart_toEndOf="@id/cv_image"
            app:layout_constraintTop_toTopOf="@id/cv_image"
            tools:text="리뷰남기는데" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/size_spacing_20"
            android:layout_marginBottom="@dimen/size_spacing_20"
            android:scaleType="centerCrop"
            android:src="@drawable/purple_horizontal_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
