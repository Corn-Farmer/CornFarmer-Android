<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/splash_logo_iv"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cornfarmer_logo" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignRight="@+id/splash_logo_iv"
            android:layout_marginTop="71dp"
            android:layout_marginRight="70dp"
            android:src="@drawable/cornfarmer_character" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_none_login_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/none_login_round"
            android:gravity="right|center_vertical"
            android:paddingEnd="50dp"
            android:text="로그인 없이 둘러보기"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#999999" />

        <Button
            android:id="@+id/login_kakao_login_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/kakao_login_round"
            android:gravity="right|center_vertical"
            android:paddingEnd="50dp"
            android:text="카카오 로그인"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_naver_login_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/naver_login_round"
            android:gravity="right|center_vertical"
            android:paddingEnd="50dp"
            android:text="네이버 로그인"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>