<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.corn_farmer.src.join.JoinGenreActivity">


    <LinearLayout
        android:id="@+id/genre_finish_ll"
        android:layout_width="32dp"
        android:layout_height="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="41dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/genre_finish_iv"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:src="@drawable/genre_finish" />


        <ImageView
            android:id="@+id/genre_finish_color_iv"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:src="@drawable/genre_finish_color"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/genre_detail_iv"
        android:layout_width="268dp"
        android:layout_height="26dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/gerne_explain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genre_finish_ll" />


    <ImageView
        android:id="@+id/genre_detail_iv2"
        android:layout_width="146dp"
        android:layout_height="13dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/genre_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genre_detail_iv" />

    <GridLayout
        android:id="@+id/genre_grid_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genre_detail_iv2">

        <LinearLayout>

            <ImageView
                android:id="@+id/genre_dacu_iv"
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_dacy" />

            <ImageView
                android:id="@+id/genre_dacu_color_iv"
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_dacu_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="8dp"
            >

            <ImageView
                android:id="@+id/genre_anime_iv"
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_anime" />

            <ImageView
                android:id="@+id/genre_anime_color_iv"
                android:layout_width="127dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_anime_color"
                android:visibility="gone" />

        </LinearLayout>

    </GridLayout>

    <GridLayout
        android:id="@+id/genre_grid_02"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genre_grid_01"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content">

        <LinearLayout>

            <ImageView
                android:id="@+id/genre_fantasy_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_fantasy" />

            <ImageView
                android:id="@+id/genre_fantasy_color_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_fantasy_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="8dp"
            >

            <ImageView
                android:id="@+id/genre_thrill_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/gerne_thrill" />

            <ImageView
                android:id="@+id/genre_thrill_color_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_thrill_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="8dp"
            >

            <ImageView
                android:id="@+id/genre_sport_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_sprots" />

            <ImageView
                android:id="@+id/genre_sport_color_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_sport_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_column="0"
            android:layout_marginTop="16dp"
            android:layout_row="1">

            <ImageView
                android:id="@+id/genre_romance_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/gerne_romance" />

            <ImageView
                android:id="@+id/genre_romance_color_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_romnace_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            >

            <ImageView
                android:id="@+id/genre_drama_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_drama" />

            <ImageView
                android:id="@+id/genre_drama_color_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_drama_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            >

            <ImageView
                android:id="@+id/genre_comedy_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_comedy" />

            <ImageView
                android:id="@+id/genre_comedy_color_iv"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_comedy_color"
                android:visibility="gone" />

        </LinearLayout>

    </GridLayout>

    <GridLayout
        android:id="@+id/genre_grid_03"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genre_grid_02"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content">

        <LinearLayout>

            <ImageView
                android:id="@+id/genre_family_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_family" />

            <ImageView
                android:id="@+id/genre_family_color_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_family_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/genre_music_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_music" />

            <ImageView
                android:id="@+id/genre_music_color_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_music_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/genre_sf_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_sf" />

            <ImageView
                android:id="@+id/genre_sf_color_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_sf_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/genre_action_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_action" />

            <ImageView
                android:id="@+id/genre_action_color_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_action_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/genre_history_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_history" />

            <ImageView
                android:id="@+id/genre_history_color_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_history_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/genre_horor_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_horor" />

            <ImageView
                android:id="@+id/genre_horor_color_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_horor_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/genre_crime_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_crime" />

            <ImageView
                android:id="@+id/genre_crime_color_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_crime_color"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/genre_war_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_war" />

            <ImageView
                android:id="@+id/genre_war_color_iv"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:src="@drawable/genre_war_color"
                android:visibility="gone" />

        </LinearLayout>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>