<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.cornfarmer.presentation.join.JoinGenreActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_finish"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/size_spacing_50"
            android:layout_marginEnd="@dimen/size_spacing_40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_finish"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:src="@drawable/genre_finish" />

            <ImageView
                android:id="@+id/iv_finish_color"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:src="@drawable/genre_finish_color"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="268dp"
            android:layout_height="26dp"
            android:layout_marginStart="@dimen/size_spacing_24"
            android:layout_marginTop="@dimen/size_spacing_72"
            android:src="@drawable/gerne_explain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_finish" />


        <ImageView
            android:id="@+id/iv_sub_title"
            android:layout_width="146dp"
            android:layout_height="13dp"
            android:layout_marginStart="@dimen/size_spacing_24"
            android:layout_marginTop="@dimen/size_spacing_20"
            android:src="@drawable/genre_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_title" />

        <GridLayout
            android:id="@+id/layout_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_spacing_20"
            android:layout_marginTop="@dimen/size_spacing_34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_sub_title">

            <LinearLayout>

                <ImageView
                    android:id="@+id/iv_dacu"
                    android:layout_width="127dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_dacy" />

                <ImageView
                    android:id="@+id/iv_dacu_color"
                    android:layout_width="127dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_dacu_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout android:layout_marginStart="@dimen/size_spacing_8">

                <ImageView
                    android:id="@+id/iv_anime"
                    android:layout_width="127dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_anime" />

                <ImageView
                    android:id="@+id/iv_anime_color"
                    android:layout_width="127dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_anime_color"
                    android:visibility="gone" />

            </LinearLayout>

        </GridLayout>

        <GridLayout
            android:id="@+id/layout_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_spacing_20"
            android:layout_marginTop="@dimen/size_spacing_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_first">

            <LinearLayout>

                <ImageView
                    android:id="@+id/iv_fantasy"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_fantasy" />

                <ImageView
                    android:id="@+id/iv_fantasy_color"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_fantasy_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout android:layout_marginStart="@dimen/size_spacing_8">

                <ImageView
                    android:id="@+id/iv_thrill"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/gerne_thrill" />

                <ImageView
                    android:id="@+id/iv_thrill_color"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_thrill_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout android:layout_marginStart="@dimen/size_spacing_8">

                <ImageView
                    android:id="@+id/iv_sport"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_sprots" />

                <ImageView
                    android:id="@+id/iv_sport_color"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_sport_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="@dimen/size_spacing_16">

                <ImageView
                    android:id="@+id/iv_romance"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/gerne_romance" />

                <ImageView
                    android:id="@+id/iv_romance_color"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_romnace_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/size_spacing_8"
                android:layout_marginTop="@dimen/size_spacing_16">

                <ImageView
                    android:id="@+id/iv_drama"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_drama" />

                <ImageView
                    android:id="@+id/iv_drama_color"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_drama_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/size_spacing_8"
                android:layout_marginTop="@dimen/size_spacing_16">

                <ImageView
                    android:id="@+id/iv_comedy"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_comedy" />

                <ImageView
                    android:id="@+id/iv_comedy_color"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_comedy_color"
                    android:visibility="gone" />

            </LinearLayout>

        </GridLayout>

        <GridLayout
            android:id="@+id/layout_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_spacing_20"
            android:layout_marginTop="@dimen/size_spacing_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_second">

            <LinearLayout>

                <ImageView
                    android:id="@+id/iv_family"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_family" />

                <ImageView
                    android:id="@+id/iv_family_color"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_family_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout android:layout_marginStart="@dimen/size_spacing_8">

                <ImageView
                    android:id="@+id/iv_music"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_music" />

                <ImageView
                    android:id="@+id/iv_music_color"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_music_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout android:layout_marginStart="@dimen/size_spacing_8">

                <ImageView
                    android:id="@+id/iv_sf"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_sf" />

                <ImageView
                    android:id="@+id/iv_sf_color"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_sf_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="@dimen/size_spacing_16">

                <ImageView
                    android:id="@+id/iv_action"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_action" />

                <ImageView
                    android:id="@+id/iv_action_color"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_action_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/size_spacing_8"
                android:layout_marginTop="@dimen/size_spacing_16">

                <ImageView
                    android:id="@+id/iv_history"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_history" />

                <ImageView
                    android:id="@+id/iv_history_color"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_history_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/size_spacing_8"
                android:layout_marginTop="@dimen/size_spacing_16">

                <ImageView
                    android:id="@+id/iv_horor"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_horor" />

                <ImageView
                    android:id="@+id/iv_horor_color"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_horor_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="@dimen/size_spacing_16">

                <ImageView
                    android:id="@+id/iv_crime"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_crime" />

                <ImageView
                    android:id="@+id/iv_crime_color"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_crime_color"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/size_spacing_8"
                android:layout_marginTop="@dimen/size_spacing_16">

                <ImageView
                    android:id="@+id/iv_war"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_war" />

                <ImageView
                    android:id="@+id/iv_war_color"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:src="@drawable/genre_war_color"
                    android:visibility="gone" />

            </LinearLayout>
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
