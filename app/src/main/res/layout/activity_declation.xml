<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.corn.corn_farmer.src.detail.DeclationActivity">


    <ImageView
        android:id="@+id/declation_previous_btn_iv"
        android:layout_width="25dp"
        android:layout_height="15dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/declation_declation_tv"
        android:text="신고하기"
        android:textSize="28sp"
        android:textColor="#FFBD02"
        android:layout_marginTop="51dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/declation_previous_btn_iv"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/declation_text_et"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="top"
        android:padding="20dp"
        android:maxLines="5"
        android:background="@drawable/declation_round"
        android:layout_height="320dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/declation_declation_tv"
         />

    <CheckBox
        android:id="@+id/declation_report_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="사용자 신고하기"
        android:textColor="#1E005D"
        android:textStyle="bold"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/declation_text_et" />

    <CheckBox
        android:id="@+id/declation_block_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="21sp"
        android:textColor="#1E005D"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/declation_report_user"
        android:text="사용자 차단하기" />

    <Button
        android:id="@+id/declation_finish_bt"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="작성완료"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#31009A"
        app:layout_constraintTop_toBottomOf="@id/declation_block_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>