<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/wishi_cv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="30dp"
        >
        <ImageView
            android:id="@+id/wishlist_movie1_image_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/wishlist_movie1_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영화 제목 1"
        android:textSize="11sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/wishi_cv"
        app:layout_constraintStart_toStartOf="@id/wishi_cv"
        app:layout_constraintEnd_toEndOf="@id/wishi_cv"
 />
</androidx.constraintlayout.widget.ConstraintLayout>